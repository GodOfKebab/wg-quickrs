meta {
  name: /api/token
  type: http
  seq: 3
}

post {
  url: {{base-url}}/api/token?client_id=bruno&password={{password}}
  body: none
  auth: none
}

params:query {
  client_id: bruno
  password: {{password}}
}

assert {
  res.status: eq 200
}

script:post-response {
  bru.setVar("token", res.body);
}

settings {
  encodeUrl: true
}
