meta {
  name: /api/token
  type: http
  seq: 1
}

post {
  url: {{base-url}}/api/token
  body: json
  auth: none
}

body:json {
  {
    "client_id": "bruno",
    "password": "{{password}}"
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  bru.setVar("token", res.body);
}

settings {
  encodeUrl: true
  timeout: 0
}
